
<section class="headline"> 
<h1 id="headline">What your community recommends:</h1>
</section>



{{#each allAppsFromDB}}

<section class="nutritionOverview">
    <div class="appModule">
            <h6>Name: {{name}}</h6>
            <img src="{{imageUrl}}" alt="Image for {{title}}"height="200px" width="200px"></img>
            <h6>Description:</h6>
	        <artical class="appDescription">{{description}}</artical>
           

             <h6>Rating:</h6>
            <p class="star-rating">
                <span class="my-star star-1" data-star="1"></span>
                <span class="my-star star-2" data-star="2"></span>
                <span class="my-star star-3" data-star="3"></span>
                <span class="my-star star-4" data-star="4"></span>
                <span class="my-star star-5" data-star="5"></span>
                <input type="hidden" name="rating" readonly id="output">
            </p> 
             <a class="nutritionReviews" href="nutrition/appReviews/{{allAppsFromDB._id}}"> &#10150 See all the reviews</a>
    </div>



    {{!-- <h6>{{owner}}</h6> --}}
