        <div class="navigationCenter"> <button><a href="/nutrition/create"> &#10150 Share what help you!</a></button></div>
    </div>




        <script>   
            JSON.stringify(allAppsFromDB)  
            {{{allAppsFromDB}}}.forEach(app => { 
                console.log('thats the app:' app)
                (let i = 1; i <= 5; i++) {
                if(i <= app.rating) {
                  document.querySelector('.star-'+ (i)).classList.add('is-active')
                }
            }
        })

        </script>
    


 
